# Qwen3-Embedding MCP Server Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Model Configuration
# =============================================================================

# HuggingFace model ID (default: Qwen/Qwen3-Embedding-8B)
# Alternative smaller models:
#   - Qwen/Qwen3-Embedding-4B
#   - Qwen/Qwen3-Embedding-0.6B
QWEN3_EMBEDDING_MODEL_ID=Qwen/Qwen3-Embedding-8B

# Device for inference: cpu, cuda, mps, auto
QWEN3_EMBEDDING_DEVICE=cpu

# Model precision: float32, float16, bfloat16, auto
# Use float32 for best accuracy on CPU
# Use float16 or bfloat16 on GPU for memory efficiency
QWEN3_EMBEDDING_TORCH_DTYPE=float32

# =============================================================================
# Embedding Configuration
# =============================================================================

# Default embedding dimension (128-4096)
# Smaller dimensions are faster but less accurate
# Qwen3-8B supports MRL for flexible output dimensions
QWEN3_EMBEDDING_DEFAULT_DIMENSION=4096

# Maximum input sequence length in tokens (Qwen3-8B supports 32K)
QWEN3_EMBEDDING_MAX_SEQUENCE_LENGTH=32768

# Whether to L2-normalize embeddings by default
QWEN3_EMBEDDING_NORMALIZE_EMBEDDINGS=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Batch size for processing multiple texts
QWEN3_EMBEDDING_BATCH_SIZE=8

# Show progress bar during batch processing
QWEN3_EMBEDDING_SHOW_PROGRESS=false

# =============================================================================
# Server Configuration
# =============================================================================

# MCP server name (shown in client)
QWEN3_EMBEDDING_SERVER_NAME=qwen3-embedding-mcp

# Logging level: DEBUG, INFO, WARNING, ERROR
QWEN3_EMBEDDING_LOG_LEVEL=INFO

# =============================================================================
# Cache Configuration
# =============================================================================

# Custom cache directory for model weights
# Leave empty to use HuggingFace default (~/.cache/huggingface)
# QWEN3_EMBEDDING_CACHE_DIR=

# Trust remote code from HuggingFace Hub
QWEN3_EMBEDDING_TRUST_REMOTE_CODE=true
